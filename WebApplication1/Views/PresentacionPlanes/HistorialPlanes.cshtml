        <tbody>
            @foreach (var item in Model.PresentacionesPlanes)
            {
                <tr>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.FechaPresentacionPlan)
                    </td>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.FechaEvaluacionPlan)
                    </td>
                    <td class="text-left">
