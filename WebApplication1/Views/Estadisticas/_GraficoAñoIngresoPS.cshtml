@using WebApplication1.Models

@{
    Layout = null;
}


<div id="ajaxBeginFormResult" class="text-center">
    <head class="no-print">
        <link rel="stylesheet" type="text/css" href="~/Scripts/jqPlot/jquery.jqplot.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/themes/base/jquery-ui.css" />
    </head>

    <div id="seleccion">
        <br />
        <hr style="color: darkgrey" />
        <h4>Desde: @ViewBag.fechadesde - Hasta: @ViewBag.fechahasta</h4>
        


        <code style="color: blue; font-style: italic; font-size: large">Azul: cantidad de alumnos en el año.</code>
        <code style="color: orange; font-style: italic; font-size: large">Naranja: cantidad de PS en el año.</code>
        <div id="grafico2" style="width: 1200px;">
        </div>


    </div>

    

    @*<div class="no-print">
        <a class="btn btn-primary" onclick="window.print('#seleccion');">
