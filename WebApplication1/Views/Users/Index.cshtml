
@model IEnumerable<WebApplication1.Models.UserView>


@{
    ViewBag.Title = "Usuarios";
}

<h2>Gestión de Usuarios</h2>
<p>@Html.ActionLink("Agregar Usuario", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-success" })</p>
<br/>
<table id="mitabla" class="table table-striped table-bordered">
    <thead>

        <tr class="text-center" style="color: #2c3e50; background-color: lightblue">
            <th class="text-left" style="border-radius: 3px">
                @*@Html.DisplayNameFor(model => model.Name)*@Usuario
            </th>
            <th class="text-left" style="border-radius: 3px">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="text-center" style="border-radius: 3px">
                Acciones
            </th>


        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td class="text-center">
                    <a href="@Url.Action("Roles", "Users")" class="btn btn-primary btn-sm">Ver Permisos</a>
                    @*@Html.ActionLink("Permisos", "Roles", new { userID = item.UserID }) |*@
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#mitabla").DataTable({
                "language": {
                    "url": "/Scripts/DataTables/spanish.json"
                }
            });
    });
    </script>
}