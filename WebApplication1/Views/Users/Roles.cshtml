
@model WebApplication1.Models.UserView
@{
    ViewBag.Title = "Roles";
}

<h2>Permisos del usuario: @Model.Name</h2>


<p>
    @Html.ActionLink("Agregar permiso", "AddRole", new { userID = Model.UserID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-info" })
</p>
<table class="table">
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Name)
            </td>

            <td>
                @Html.ActionLink("Eliminar", "Delete", new { user = Model, Model.Roles[i].RoleID })
            </td>
        </tr>
    }

</table>





