@model IEnumerable<WebApplication1.Models.Area>

@{
    ViewBag.Title = "Áreas";
}

<h2>Áreas:</h2>

<p>
    @Html.ActionLink("Agregar área", "Create")
</p>
<table id="mitabla" class="table table-striped table-bordered ">
    <thead>

        <tr class="text-center" style="color: #2c3e50; background-color: lightblue">
            <th>
                @Html.DisplayNameFor(model => model.NombreArea)
            </th>
            <th class="text-center" style="color: #2c3e50; background-color: lightblue">
                @Html.DisplayNameFor(model => model.DescripcionArea)
            </th>
            <th class="text-left" style="border-radius: 3px">
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.NombreArea)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.DescripcionArea)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdArea }) |
                    @*@Html.ActionLink("Details", "Details", new { id=item.IdArea }) |*@
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdArea })
                </td>
            </tr>
        }
    </tbody>

</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#mitabla").DataTable({
                "language": {
                    "url": "/Scripts/DataTables/spanish.json"
                }
            });
    });
    </script>
}