
@{
    Layout = null;
}
<head>
    <script>
        /////////////////Start:Select searchable////////////////
        $(document).ready(function() {
            $(".js-example-basic-single1").select2();
            $("#buscarps").prop("disabled", true);

            $(document.body).on("change", ".js-example-basic-single1", function () {
                if (this.value == "" || this.value == null)
                { $("#buscarps").prop("disabled", true) }
                else { $("#buscarps").removeAttr("disabled") }
            });

            $("#buscarps").click(function () {

                $('#busquedaps').submit();
            });
        });
        ////////////////End:Select searchable///////////////////


    </script>
</head>
<li>
    @using (Html.BeginForm(null, null, new { Alumno = "Alumno" }, FormMethod.Post, new { id = "busquedaps" }))
    {
        <div class="text-center" style="padding-top: 5px;display: inline-block">
            <select class="js-example-basic-single1 form-control" id="Alumno" name="Alumno" style="font: small-caption; width: 170px; height: 25px; background-color: beige; padding-top: 30px;display: inline-block">
                <option value="">Buscar PS...</option>
                @foreach (var item in ViewBag.alumnos)
                {
                    <option value="@item.Legajo" style="font-size: xx-small">@item.Legajo - @item.NombreAlu, @item.ApellidoAlu</option>
                }
            </select>
            <button id="buscarps" class="btn btn-info btn-xs glyphicon glyphicon-search tres"/>

        </div>
    }

</li>
